<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ts"
    android:backgroundTint="#838A72B4"
    android:backgroundTintMode="screen"
    android:orientation="vertical"
    tools:context=".Student.ToolDetailsNOrder">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_det_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#CE10316B"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        app:navigationIcon="@drawable/ic_arrow_back_black_24dp">

        <TextView
            android:id="@+id/tool_name_det"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:text="Tool Details"
            android:textColor="#f8de7e"
            android:textSize="25sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="100"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="4">

            <TextView
                android:id="@+id/td_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rounded_names1"
                android:gravity="center"
                android:text="tool name"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/td_img"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rounded_names"
                    android:gravity="center"
                    android:text="Posted Student Id"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/td_sid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:text="Student id"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rounded_names"
                    android:gravity="center"
                    android:text="Rating"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/td_rat"
                    style="?android:attr/ratingBarStyleIndicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:outlineAmbientShadowColor="#f8de7e"
                    android:outlineSpotShadowColor="#f8de7e"
                    android:rating="5"
                    android:stepSize="1"
                    android:textSize="10sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rounded_names"
                    android:gravity="center"
                    android:text="Tool Availabile In"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/td_avail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="40dp"
                    android:gravity="center|top"
                    android:text="availability"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_names"
                android:gravity="center"
                android:text="Tool Description"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/td_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:scrollbarFadeDuration="3"
                android:scrollbarSize="5dp"
                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical"
                android:text="tool desc"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:ems="6"
                android:background="@drawable/rounded_names"
                android:gravity="center"
                android:text="From Date"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/td_sd"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:ems="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="YYYY-MM-DD"
                android:layout_gravity="center"/>

            <ImageButton
                android:background="#9A5AEE98"
                android:id="@+id/btn_td_sd"
                android:layout_gravity="center"
                android:src="@drawable/ic_date_range_black_24dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:ems="6"
                android:background="@drawable/rounded_names"
                android:gravity="center"
                android:text="To Date"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/td_ed"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="YYYY-MM-DD"
                android:ems="6"
                android:layout_gravity="center"/>

            <ImageButton
                android:background="#9A5AEE98"
                android:id="@+id/btn_td_ed"
                android:layout_gravity="center"
                android:src="@drawable/ic_date_range_black_24dp"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center">

            <Button
                android:id="@+id/btn_td_borrow"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:background="@drawable/round_button"
                android:ems="8"
                android:text="Borrow"
                android:textColor="#DAC8F8"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
