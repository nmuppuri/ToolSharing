<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.StudentProfile">

    <!-- TODO: Update blank fragment layout -->

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="56dp"
        android:text="@string/title_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/stu_prof_tool"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#CE10316B"
            android:theme="@style/ThemeOverlay.AppCompat.Dark"
            app:menu="@menu/logout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="My Profile"
                android:textColor="#f8de7e"
                android:textSize="22sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20">

                <TextView
                    android:id="@+id/stu_pro_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="FirstName LastName"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="10"
                android:background="@drawable/rounded_edittext"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_person_black_24dp" />

                <EditText
                    android:id="@+id/stu_pro_fn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="9"
                    android:gravity="center|start"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:textColor="#F7E6AB"
                    android:textColorHint="#80F8DE7E"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="10"
                android:background="@drawable/rounded_edittext"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_person_black_24dp" />

                <EditText
                    android:id="@+id/stu_pro_ln"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="9"
                    android:gravity="center|start"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:textColor="#F7E6AB"
                    android:textColorHint="#80F8DE7E"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="10"
                android:background="@drawable/rounded_edittext"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_home_black_24dp" />

                <EditText
                    android:id="@+id/stu_pro_addr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="9"
                    android:gravity="center|start"
                    android:hint="Address"
                    android:textColor="#F7E6AB"
                    android:textColorHint="#80F8DE7E"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="10"
                android:background="@drawable/rounded_edittext"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_phone_iphone_black_24dp" />

                <EditText
                    android:id="@+id/stu_pro_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="9"
                    android:gravity="center|start"
                    android:hint="Phone"
                    android:inputType="phone"
                    android:textColor="#F7E6AB"
                    android:textColorHint="#80F8DE7E"
                    android:textSize="22sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="12"
                android:background="@drawable/rounded_edittext"
                android:gravity="center">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/ic_vpn_key_black_24dp" />

                <EditText
                    android:id="@+id/stu_pro_pwd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_weight="9"
                    android:gravity="center|start"
                    android:hint="Change Password"
                    android:inputType="textPassword"
                    android:textColor="#DAC8F8"
                    android:textColorHint="#80F8DE7E"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="10"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_stu_pro_update"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/round_button"
                    android:ems="10"
                    android:gravity="center"
                    android:text="Save Changes"
                    android:textColor="#DAC8F8"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="10"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_stu_pro_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/round_button"
                    android:ems="10"
                    android:gravity="center"
                    android:text="Delete Account"
                    android:textColor="#DAC8F8"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>

    </FrameLayout>


</RelativeLayout>
