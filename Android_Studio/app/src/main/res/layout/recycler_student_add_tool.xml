<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:backgroundTintMode="screen"
        app:cardBackgroundColor="#25A600FF">
        <!--app:cardBackgroundColor="@android:color/holo_blue_light">-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--android:background="#500B2EF5"-->


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/add_tool_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/round_img_recycler"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/add_tool_name"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="12"
                android:layout_alignParentStart="@id/add_tool_image"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="@id/btn_add_tool"
                android:layout_marginStart="20dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/add_tool_image"
                android:gravity="center|start"
                android:text="Tool Name"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_add_tool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="@id/add_tool_name"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/add_tool_name"
                android:gravity="center"
                android:background="@drawable/approve_button"
                android:text="add"
                android:textSize="15sp"
                android:textColor="#F8486854"
                android:textStyle="bold" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>